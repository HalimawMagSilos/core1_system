{
  "name": "hospital-management-backend",
  "version": "1.0.0",
  "description": "Hospital Management System Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:security": "npm audit --audit-level=high",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "docker:build": "docker build -t hospital-management .",
    "docker:run": "docker run -p 3000:3000 hospital-management"
  },
  "dependencies": {
    "express": "^4.18.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "express-slow-down": "^1.6.0",
    "joi": "^17.9.2",
    "nodemailer": "^6.9.4",
    "uuid": "^9.0.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.2.0",
    
   
    "exceljs": "^4.4.0",
    "pdfkit": "^0.14.0",
    
 
    "bcrypt": "^5.1.1",
    "crypto-js": "^4.1.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-jest": "^27.2.3"
  },
  "keywords": [
    "hospital",
    "management",
    "healthcare",
    "api",
    "security"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "your-repository-url"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/test/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}